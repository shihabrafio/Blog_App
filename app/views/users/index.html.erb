<div class="flex flex-col gap-2 w-full items-center p-2 users">
  <div class="flex justify-between items-center">
    <% if user_signed_in? %> 
       <h1 class="text-red-950 px-4"> Hi <%= current_user.name.split.first %> </h1> 
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "px-4 py-2 mr-4 bg-red-500 rounded-lg" %> 
    <% else %>
      <%= button_to "Sign in", new_user_session_path, class: "px-4 py-2 bg-red-500 rounded-lg" %> 
    <% end %>
  </div>
  <% @users.each do |user| %>
    <%= render "shared/user", user: user %>
  <% end %>
</div>